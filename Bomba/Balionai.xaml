<Window x:Class="Bomba.Balionai"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:Bomba"
        mc:Ignorable="d"
        Title="Bolionai" Height="600" Width="450" ResizeMode="CanMinimize">
    <Canvas Name="MyCanvas" Focusable="True" MouseLeftButtonDown="PopBalloons" Background="White">

        <TextBlock FontSize="24" Name="scoreText" Text="Score: 0"
                   Background="AliceBlue"  FontWeight="ExtraBold" Canvas.Top="500" Canvas.Left="10" />
    </Canvas>
</Window>